{
  "name": "wa-gateway",
  "version": "1.0.0",
  "description": "Whatsapp Gateway",
  "scripts": {
    "clean": "rm -rf ./dist",
    "dev-prebuild": "npm run clean && yarn build && yarn dev",
    "dev": "nodemon ./dist/app.js",
    "start": "NODE_ENV=production node ./dist/app.js",
    "serve:docker": "NODE_ENV=production pm2-runtime ./dist/app.js",
    "lint": "npx eslint '*/**/*.{js,jsx,ts,tsx}' --quiet --fix",
    "type-check": "npx tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "heroku-prebuild": "yarn && npm run clean",
    "build": "npx tsc -p .",
    "before-build": "yarn && npm run clean && yarn build",
    "deploy": "npm run before-build && pm2 reload ecosystem.config.js",
    "release": "standard-version",
    "release:pre": "npm run release -- --prerelease",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Whatsapp",
    "Gateway"
  ],
  "author": "masb0ymas",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "helmet": "^4.6.0",
    "http": "^0.0.1-security",
    "http-errors": "^1.8.0",
    "libphonenumber-js": "^1.9.23",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.32",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "qrcode": "^1.4.4",
    "qrcode-terminal": "^0.12.0",
    "slugify": "^1.6.0",
    "socket.io": "^4.1.3",
    "whatsapp-web.js": "^1.14.0",
    "winston": "^3.3.3",
    "yup": "0.31.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^1.8.1",
    "@types/lodash": "^4.14.172",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.6.1",
    "@types/qrcode": "^1.4.1",
    "@types/yup": "^0.29.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">= 14.x"
  },
  "_moduleAliases": {
    "@expresso/*": "dist/@expresso/*",
    "@config/*": "dist/config/*",
    "@controllers/*": "dist/controllers/*",
    "@jobs/*": "dist/jobs/*",
    "@middlewares/*": "dist/middlewares/*",
    "@migrations/*": "dist/migrations/*",
    "@models/*": "dist/models/*",
    "@routes/*": "dist/routes/*",
    "@utils/*": "dist/utils/*",
    "@views/*": "dist/views/*"
  }
}
