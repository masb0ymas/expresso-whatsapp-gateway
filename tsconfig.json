{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./src/types"],
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@expresso/*": ["@expresso/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@jobs/*": ["jobs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@migrations/*": ["migrations/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
